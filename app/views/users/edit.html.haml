%h1= @user.full_name

#edit-user
  =form_for(@user) do |f|
    
    .field
      =f.label :first_name
      =f.text_field :first_name
    
    .field
      =f.label :last_name
      =f.text_field :last_name
    
    .field
      =f.label :username
      =f.text_field :username
    
    .field
      =f.label :email
      =f.text_field :email
    
    .actions
      = f.submit